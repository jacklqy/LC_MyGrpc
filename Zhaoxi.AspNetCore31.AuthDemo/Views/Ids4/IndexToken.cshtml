
@{
    ViewData["Title"] = "IndexToken";
}

<h1>IndexToken</h1>
<h3 id="token"></h3>

<script type="text/javascript">
        var token = null;
        window.onload = function () {
            var url = window.location.href;

            var array = url.split("#");
            if (array.length > 1) {
                token = array[1];
             document.getElementById("token").innerHTML = token;
            }
        }
</script>